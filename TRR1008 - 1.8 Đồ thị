#include <bits/stdc++.h>
#define all(x) x.begin(), x.end()

int main() {
    freopen("DT.INP", "r", stdin);
    freopen("DT.OUT", "w", stdout);
    int mtk[200][200];
    int n, t;
    cin >> t >> n;
    int c = 0;
    for(int i = 1; i <= n; i++){
        int k; cin >> k;
        for(int j = 0; j < k; j++){
            int x; cin >> x;
            mtk[i][x] = 1;
            if(x > i) c++;
        }
    }
    if(t == 1){
        for(int i = 1; i <= n; i++){
            int bac = 0;
            for(int j = 1; j <= n; j++){
                if(mtk[i][j])
                    bac++;
            }
            cout << bac << " ";
        }
    }else if(t == 2){
        cout << n << " " << c << endl;
        for(int  i = 1; i <= n; i++){
            for(int j = i; j <= n; j++){
                if(mtk[i][j])
                    cout << i << " " << j << endl;
            }
        }
    }
    return 0;
}
